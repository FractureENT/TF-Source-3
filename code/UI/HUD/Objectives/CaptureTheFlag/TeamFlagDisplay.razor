@using Sandbox.UI;

@attribute [StyleSheet("/UI/HUD/Objectives/CaptureTheFlag/TeamFlagDisplay.scss")]

@namespace TFS2.UI

<root>
    <div class="outline"></div>

    <div class="wrapper">
        <div class="carried_indicator"></div>
        <div class="compass_container zone" @ref="ZoneCompassContainer"></div>

        <text class="limit" @ref="Limit"></text>
        <div class="compass_container flags" @ref="FlagCompassContainer"></div>

        <text class="score blue" @ref="ScoreBlue"></text>
        <text class="score red" @ref="ScoreRed"></text>
    </div>
</root>

@code {
    Panel ZoneCompassContainer { get; set; }
    Panel FlagCompassContainer { get; set; }
    Label Limit { get; set; }
    Label ScoreBlue { get; set; }
    Label ScoreRed { get; set; }
}
